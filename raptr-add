#!/usr/bin/env bash -e
script_name="$(basename "$BASH_SOURCE")"
script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

while [[ $# > 1 ]]; do
  key="$1"; shift
  case $key in
    -n|--name) name="$1"; shift  ;;
    -p|--packages) packages="$1"; shift  ;;
    *);;
  esac
done

[ -z "$name" ] && echo "Missing required package name." && exit 1
[ -z "$packages" ] && echo "Missing required directory of packages." && exit 1

exit 0
